#include<iostream>
using namespace std;

int main()
{
	int n;
	cout << "enter a number " << endl;
	cin >> n;
	int index1 = 1;
	
	for (int i = n-1; i >=0 ; i--)
	{
		int index = 1;
		for (int j = 0; j < n; j++)
		{
			if (i <= j)
			{
				cout << index * index1 << " ";
				index++;
			}
			else
				cout << "  ";
		}
		index1++;
		cout << endl;
	}

	system("pause");
	return 0;

}
