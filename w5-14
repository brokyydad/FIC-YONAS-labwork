#include<iostream>
using namespace std;

int main()
{
	int n;
	cout << "enter a number " << endl;
	cin >> n;
	for (int i=n-1;i>=0;i--)
	{
		int index = 1;
		for (int j = -n + 1; j <= 0; j++)
		{
			if (i <= j + n - 1)
			{
				cout << index<<" ";
				index++;
			}
			else
			{
				cout << "  ";
			}
		}
		index--;
		for (int j = 0; j <= n - 1; j++)
		{
			if (i <= -j + n - 2)
			{
				cout <<--index << " ";
			}
			else
				cout << "  ";
		}
		cout << endl;
		
	}
	system("pause");
	returnÂ 0;

}
