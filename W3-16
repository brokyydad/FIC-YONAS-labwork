#include<iostream>

using namespace std;

int main()
{
	double a, b, c, s;
	cout << "enter" << endl;
	cin >> a >> b >> c;
	while (a + b <= c || a + c <= b || b + c <= a)
	{
		cout << "fuck u enter the right numbers" << endl;
		cin >> a >> b >> c;
	}
	s = (a + b + c) * 0.5;
	double area = sqrt(s * (s - a) * (s - b) * (s - c));
	cout << "the area of the triangle is " << area << endl;

	system("Pause");
	return 0;
}
