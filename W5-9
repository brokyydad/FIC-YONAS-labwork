#include<iostream>
using namespace std;

int main()
{
	int n;
	cout << "enter a number " << endl;
	cin >> n;

	for (int i = n-1; i >= 0; i--)
	{
		for (int j = -(n-1); j < n; j++)
		{
			if (i<=-j+n-1&&i<=j+n-1)
				cout << "*" << " ";
			else
				cout << "  ";
		}
		cout << endl;
	}

	system("pause");
	return 0;

}
