#include<iostream>
using namespace std;

int main()
{
	int n;
	cout << "enter a number " << endl;
	cin >> n;
	
	for (int i = n - 1; i > -n; i--)
	{
		for (int j = 0; j < n; j++)
		{
			if (i <= -j + n - 1 && i >= j - n + 1)
			{
				cout << "* ";

			}
			else
				cout << "  ";
		}
		cout << endl;
	}

	system("pause");
	return 0;

}
